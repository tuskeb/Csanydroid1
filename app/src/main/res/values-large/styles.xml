<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViews">
        <item name="android:textSize">40dp</item>
    </style>
    <style name="EditTexts">
        <item name="android:textSize">40dp</item>
        <item name="android:width">640dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="Buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">100dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin" >3dp</item>
    </style>

    <style name="textview_style">
        <item name="android:textSize">60dp</item>
        <item name="android:textColor">#006699</item>
    </style>

    <style name="teszt_layout">
        <item name="android:background">#D2D2D2</item>
    </style>
    <style name="linear_layout">
        <item name="android:background">#D2D2D2</item>
    </style>

</resources>
