<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivityFragment"
    android:id="@+id/linearLayout"
              android:weightSum="1">

    <TextView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:text="Battle Game"
        android:id="@+id/textView"
        android:layout_gravity="left|right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        style="@style/textview_style" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/teszt_layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero repository"
            android:id="@+id/hero_repository_button"
            android:layout_alignTop="@+id/view_battles_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            style="@style/button_style" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create battle"
            android:id="@+id/new_battle_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            style="@style/button_style" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battles"
            android:id="@+id/view_battles_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            style="@style/button_style" />
    </LinearLayout>

</RelativeLayout>
