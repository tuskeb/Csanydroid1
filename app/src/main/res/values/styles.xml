<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViews">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="EditTexts">
        <item name="android:textSize">20dp</item>
        <item name="android:width">300dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="Buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="hero_overalldetail_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="hero_overalldetail_name">
        <item name="android:padding">3dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="hero_overalldetail_value">
        <item name="android:padding">3dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">40dp</item>
    </style>

</resources>
