<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViews">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="EditTexts">
        <item name="android:textSize">20dp</item>
        <item name="android:width">300dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="Buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="hero_overalldetail_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="hero_overalldetail_name">
        <item name="android:padding">3dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="hero_overalldetail_value">
        <item name="android:padding">3dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hero_detail_stat_name">
        <item name="android:textColor">#222</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="hero_detail_stat_value">
        <item name="android:textColor">#555</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_column">2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">30dp</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FF8000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textStyle" >bold</item>
    </style>
    <style name="textview_style">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
